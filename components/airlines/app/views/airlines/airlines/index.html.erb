<p id="notice"><%= notice %></p>

<h1>Airlines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airlines.each do |airline| %>
      <tr>
        <td><%= airline.name %></td>
        <td><%= airline.country %></td>
        <td><%= link_to 'Show', airlines.airline_path(airline) %></td>
        <td><%= link_to 'Edit', airlines.edit_airline_path(airline) %></td>
        <td><%= link_to 'Destroy', airlines.airline_path(airline), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Airline', airlines.new_airline_path %>
